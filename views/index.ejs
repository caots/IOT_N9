<!DOCTYPE html>
<html lang="en">
  <meta charset="UTF-8" />
  <title>IOT 09</title>
  <!-- CSS (load bootstrap from a CDN) -->
  <link
    rel="stylesheet"
    href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"
  />
  <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-default" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">
            <span class="glyphicon glyphicon glyphicon-tree-deciduous"></span>
            IOT Nhom 09
          </a>
        </div>

        <ul class="nav navbar-nav">
          <li><a href="/">Home</a></li>
          <li><a href="/">About</a></li>
        </ul>
      </div>
    </nav>
    <!-- Page content -->
    <main class="container-fluid">
      <div class="row">
        <div class="jumbotron col-sm-12 col-md-6">
          <h2>Biểu đồ độ ẩm trong ngày (%)</h2>
          <div style="margin-top: 50px">
            <canvas id="myChartDoAm" width="500" height="300"></canvas>
          </div>
        </div>
        <div class="jumbotron col-sm-12 col-md-6">
          <h2>Biểu đồ lượng nước trong ngày (ml)</h2>
          <div style="margin-top: 50px">
            <canvas id="myChartLuongNuoc" width="500" height="300"></canvas>
          </div>
        </div>
      </div>
    </main>
    <script type="text/javascript">
      var ctx = document.getElementById("myChartDoAm");
      var myChart = new Chart(ctx, {
        type: "bar",
        data: {
          labels: <%- JSON.stringify(labels); %>,
          datasets: [
            {
              label: "Humidity",
              data: <%- JSON.stringify(dataDoAm); %>,
              backgroundColor: [
                "rgba(255, 129, 102, 1)",
                "rgba(234, 162, 235, 1)",
                "rgba(255, 206, 36, 1)",
                "rgba(75, 192, 192, 1)",
                "rgba(153, 102, 255, 1)",
              ],
            },
          ],
        },
        options: {
          scales: {
            yAxes: [
              {
                ticks: {
                  beginAtZero: true,
                },
              },
            ],
          },
        },
      });
    </script>
     <script type="text/javascript">
      var ctx = document.getElementById("myChartLuongNuoc");
      var myChart = new Chart(ctx, {
        type: "bar",
        data: {
          labels: <%- JSON.stringify(labels); %>,
          datasets: [
            {
              label: "Amount of water",
              data: <%- JSON.stringify(dataLuongNuoc); %>,
              backgroundColor: [
                "rgba(255, 129, 102, 1)",
                "rgba(234, 162, 235, 1)",
                "rgba(255, 206, 36, 1)",
                "rgba(75, 192, 192, 1)",
                "rgba(153, 102, 255, 1)",
              ],
            },
          ],
        },
        options: {
          scales: {
            yAxes: [
              {
                ticks: {
                  beginAtZero: true,
                },
              },
            ],
          },
        },
      });
    </script>
  </body>
</html>
